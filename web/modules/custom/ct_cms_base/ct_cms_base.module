<?php

/**
 * @file
 * Base module for CivicTheme CMS Demo.
 */

declare(strict_types=1);

use Drupal\Core\Site\Settings;

/**
 * Implements hook_theme().
 *
 * @phpstan-ignore-next-line
 */
function ct_cms_base_theme(): array {
  return [
    'ct_cms_base_counter_block' => [
      'variables' => [
        'counter_value' => 0,
      ],
      'template' => 'ct-cms-base-counter-block',
    ],
  ];
}

/**
 * Implements hook_mail_alter().
 */
function ct_cms_base_mail_alter(array &$message): void {
  // Allow to stop any mail send out through settings. Note if email
  // functionality needs to be tested, this code should be removed and
  // replaced with a dev mail system.
  if (Settings::get('suspend_mail_send')) {
    $message['send'] = FALSE;
  }
}
